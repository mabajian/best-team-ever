              <div class="med-item-icon flex-center">
                <img class="pill-icon-img" src="/images/icons/pills/{{image}}" onerror="this.src='/images/icons/pill.svg'" />
              </div>
              <div class="med-item-name flex-center med-name">
                {{medicinename}}
              </div>
            </div>
          </a>
        {{/each}}

